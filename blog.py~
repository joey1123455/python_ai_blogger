import os
from dotenv import load_dotenv
load_dotenv('./.env')

import openai

prompt = input('Whats your question: ')
openai.api_key = os.getenv("OPEN_AI_SEC_KEY")
synposis = openai.Completion.create(
    model="text-davinci-003",
    prompt=prompt,
    max_tokens=50,
    temperature=0.7,
)
print(synposis)
replys = synposis['choices'][0]['text']
print(replys)

